	<http auto-config="true">

		<!-- <remember-me data-source-ref="dataSource" /> -->

		<intercept-url pattern="/**" requires-channel="https" />

		<port-mappings>
			<port-mapping http="8080" https="8181" />
		</port-mappings>


		<access-denied-handler error-page="/accessDenied" />

		<intercept-url pattern="/main" access="ROLE_USER" />
		<intercept-url pattern="/admin" access="ROLE_USER" />

		<form-login login-page='/login' default-target-url="/main"
			authentication-failure-url="/login?error=true" username-parameter="user_login"
			password-parameter="password_login" />

		<logout logout-success-url="/login" />

	</http>

